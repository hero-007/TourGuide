<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_particular"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.tourguide.Particular">

    <TextView
        android:id="@+id/final_place_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:background="#EEEEEE"
        android:gravity="center"
        android:textColor="#00C853"
        android:textSize="20sp"
        tools:text="Place Name" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="0dp">
        <ImageView
            android:id="@+id/final_place_pic"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="3"
            android:background="#9E9E9E"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:src="@mipmap/ic_launcher" />
        <TextView
            android:id="@+id/final_place_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="#9E9E9E"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            tools:text="Details About the Place" />
        </LinearLayout>
    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Location In Google Maps"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:id="@+id/googleMaps"
        android:background="@drawable/my_button"/>

</LinearLayout>
