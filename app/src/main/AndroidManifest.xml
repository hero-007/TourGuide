<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.tourguide">

    <application
        android:allowBackup="true"
        android:icon="@drawable/location"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".educational_sites"
            android:label="Educational Sites" />
        <activity
            android:name=".religious_places"
            android:label="Religious Places" />
        <activity
            android:name=".lakes"
            android:label="Lakes And Glaciers" />
        <activity
            android:name=".falls"
            android:label="Falls And Water Parks" />
        <activity android:name=".Particular"
            />
    </application>

</manifest>